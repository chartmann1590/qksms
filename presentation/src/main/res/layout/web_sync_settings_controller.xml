<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:id="@+id/preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Enable/Disable Web Sync -->
        <com.charles.messenger.common.widget.PreferenceView
            android:id="@+id/webSyncEnabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/web_sync_enable"
            app:summary="@string/web_sync_enable_summary"
            app:widget="@layout/settings_switch_widget" />

        <View style="@style/Divider" />

        <!-- Server Configuration Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:text="@string/web_sync_server_config"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <!-- Server URL -->
        <com.charles.messenger.common.widget.PreferenceView
            android:id="@+id/serverUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/web_sync_server_url"
            app:summary="@string/web_sync_server_url_not_configured" />

        <!-- Username -->
        <com.charles.messenger.common.widget.PreferenceView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/web_sync_username"
            app:summary="@string/web_sync_username_not_configured" />

        <!-- Password -->
        <com.charles.messenger.common.widget.PreferenceView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/web_sync_password"
            app:summary="@string/web_sync_password_not_configured" />

        <!-- Test Connection Button -->
        <Button
            android:id="@+id/testConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/web_sync_test_connection"
            style="?android:attr/borderlessButtonStyle" />

        <!-- Connection Status -->
        <TextView
            android:id="@+id/connectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:visibility="gone" />

        <View style="@style/Divider" />

        <!-- Sync Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:text="@string/web_sync_sync_section"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <!-- Perform Full Sync Button -->
        <Button
            android:id="@+id/performFullSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/web_sync_perform_full_sync"
            style="?android:attr/borderlessButtonStyle" />

        <!-- Sync Progress Bar -->
        <ProgressBar
            android:id="@+id/syncProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:indeterminate="true"
            android:visibility="gone" />

        <!-- Sync Status -->
        <TextView
            android:id="@+id/syncStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <!-- Help Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/web_sync_help_text"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary" />

    </LinearLayout>

</ScrollView>
