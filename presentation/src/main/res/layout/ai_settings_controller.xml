<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:id="@+id/preferences"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Enable/Disable AI Reply -->
        <com.charles.messenger.common.widget.PreferenceView
            android:id="@+id/aiEnabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/ai_settings_enable"
            app:summary="@string/ai_settings_enable_summary"
            app:widget="@layout/settings_switch_widget" />

        <View style="@style/Divider" />

        <!-- Ollama API URL -->
        <com.charles.messenger.common.widget.PreferenceView
            android:id="@+id/ollamaUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/ai_settings_ollama_url"
            app:summary="@string/ai_settings_ollama_url_summary" />

        <!-- Test Connection Button -->
        <Button
            android:id="@+id/testConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/ai_settings_test_connection"
            style="?android:attr/borderlessButtonStyle" />

        <!-- Connection Status -->
        <TextView
            android:id="@+id/connectionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary" />

        <!-- Model Selection -->
        <com.charles.messenger.common.widget.PreferenceView
            android:id="@+id/modelSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/ai_settings_model"
            app:summary="@string/ai_settings_model_summary" />

        <View style="@style/Divider" />

        <!-- Auto-Reply to All Toggle -->
        <com.charles.messenger.common.widget.PreferenceView
            android:id="@+id/aiAutoReplyToAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/ai_settings_auto_reply_all"
            app:summary="@string/ai_settings_auto_reply_all_summary"
            app:widget="@layout/settings_switch_widget" />

        <!-- Warning Text -->
        <TextView
            android:id="@+id/autoReplyWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/ai_settings_auto_reply_warning"
            android:textColor="#D32F2F"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
