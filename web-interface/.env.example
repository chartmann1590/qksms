# Database Configuration
POSTGRES_USER=textpilot
POSTGRES_PASSWORD=changeme_use_strong_password
POSTGRES_DB=textpilot_web

# JWT Secrets (REQUIRED - Generate strong random strings!)
# You can generate secrets with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=change_this_to_a_random_32_char_string
JWT_REFRESH_SECRET=change_this_to_another_random_32_char_string

# Server Configuration
NODE_ENV=production
PORT=3000

# Exposed Ports
HTTP_PORT=8080
# HTTPS_PORT=8443

# File Upload Limits
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Initial User Auto-Registration (OPTIONAL)
# If all three values are set, the server will automatically create a user account on startup.
# This is useful for initial setup - you can create your first user without using the API.
# Leave these commented out or empty to skip auto-registration.
# 
# To get your device ID on Android:
# Settings -> About phone -> Android ID (or use: adb shell settings get secure android_id)
INITIAL_USERNAME=
INITIAL_PASSWORD=
INITIAL_DEVICE_ID=

# Database URL (auto-generated from above, don't change unless needed)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}